{
    "name": "ultra-pos-unit-tests",
    "version": "1.0.0",
    "description": "Test suite for ULTRA_POS product unit type feature",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:unit": "jest tests/unit"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "jest": "^29.7.0"
    },
    "jest": {
        "testEnvironment": "node",
        "coverageDirectory": "coverage",
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/**/*.test.js"
        ],
        "testMatch": [
            "**/tests/**/*.test.js"
        ],
        "verbose": true
    }
}